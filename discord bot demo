  {
  "name": "discord-bot-demo",
  "version": "1.0.0",
  "description": "Demo Discord bot with landing page",
  "main": "bot.js",
  "scripts": {
    "start": "node bot.js"
  },
  "dependencies": {
    "discord.js": "^14.13.0"
  }
}
const { Client, GatewayIntentBits, Collection } = require('discord.js');
const fs = require('fs');
const client = new Client({ intents: [GatewayIntentBits.Guilds, GatewayIntentBits.GuildMessages, GatewayIntentBits.MessageContent] });

client.commands = new Collection();
client.commands.set('profile', require('./commands/profile'));
client.commands.set('show', require('./commands/show'));

const dbFile = './profiles.json';
let profiles = {};
if (fs.existsSync(dbFile)) {
  profiles = JSON.parse(fs.readFileSync(dbFile));
}

client.once('ready', () => {
  console.log(`Logged in as ${client.user.tag}`);
});

client.on('interactionCreate', async interaction => {
  if (!interaction.isChatInputCommand()) return;
  const command = client.commands.get(interaction.commandName);
  if (command) command.execute(interaction, profiles, dbFile);
});

client.login(process.env.BOT_TOKEN);

const fs = require('fs');

module.exports = {
  name: 'profile',
  description: 'Save your nickname',
  async execute(interaction, profiles, dbFile) {
    const nickname = interaction.options.getString('nickname');
    profiles[interaction.user.id] = nickname;
    fs.writeFileSync(dbFile, JSON.stringify(profiles, null, 2));
    await interaction.reply(`Profile saved: ${nickname}`);
  },
};

module.exports = {
  name: 'show',
  description: 'Show your saved nickname',
  async execute(interaction, profiles) {
    const name = profiles[interaction.user.id] || 'Not set';
    await interaction.reply(`Your nickname: ${name}`);
  },
};

